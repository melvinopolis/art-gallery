<div class="container-fluid">
    <% @categories.each do |category| %>
        <div class="header">
            <h1><%= link_to category.name, category %></h1>
        </div>

        <div class="row">
            <!-- Shows 6 most recent thumbnails in each category -->
            <% category.pictures.sort_by{|t| - t.created_at.to_i}.first(6).each do |picture|%>
                <div class="col-xs-6 col-s-4 col-lg-2 thumbnails">
                    <%= link_to image_tag(picture.image_url, class: "img-responsive"), picture_path(picture.id) %>
                </div>
                    <% end %>
        </div>
            <% end %>
</div>
    