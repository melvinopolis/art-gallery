<div class="container-fluid">
	<h1 class="header">Members</h1>
	<div class="row">
		<div class="col-xs-4 col-sm-3 col-m-2">
			<ul class="list-inline members">	
				<% @users.each do |user| %>
					<% if user.avatar? == true %>
						<li><%= link_to image_tag(user.avatar_url, class: "img-responsive"), profile_path(user.id) %>
						<p><%= user.username %></p></li>
					<% else %>
						<li><%= link_to image_tag("gllry.png", class: "img-responsive"), profile_path(user.id) %>
						<p><%= user.username %></p></li>
					<% end %>
				<% end %>
				<!-- Need to figure how to make them not stacked... -->
			</ul>
		</div>
	</div>
</div>