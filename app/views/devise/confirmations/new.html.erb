<div class="container-fluid">
  	<div class="row">
	    <div class="col-xs-12 col-s-6">
			<%= bootstrap_form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }, html: {class: "well"}) do |f| %>
			  <%= devise_error_messages! %>

			  <legend>Resend confirmation instructions</legend>

			  <div class="field">
			    <%= f.label :email %><br />
			    <%= f.email_field :email, autofocus: true %>
			  </div>

			  <div class="actions">
			    <%= f.submit "Resend confirmation instructions" %>
			  </div><br>
			  <%= render "devise/shared/links" %>
			<% end %>
		</div>
	</div>
</div>


