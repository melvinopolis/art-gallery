<div class="container-fluid">
  <div class="row">
    <div class="col-xs-12 col-s-6">
      <%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "well"}) do |f| %>
      <%= devise_error_messages! %>

      <legend>Sign up</legend>

      <div class="field">
        <%= f.text_field :first_name, autofocus: true %>
      </div>

      <div class="field">
        <%= f.text_field :last_name %>
      </div>

      <div class="field">
        <%= f.text_field :username %>
      </div>

      <div class="field">
        <%= f.email_field :email, placeholder: "name@email.com" %>
      </div>

      <div class="field">
        <% if @validatable %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off" %>
        
      </div>

      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "off" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up" %>
      </div>
      <% end %>
    </div>
  </div>
</div>
